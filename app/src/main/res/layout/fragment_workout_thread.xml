<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Header (Title) -->
    <TextView
        android:id="@+id/textViewWorkoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workout Discussion"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <!-- Opinions RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOpinions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false"/>

    <!-- Opinion Input & Upload -->
    <!-- Input, Preview & Upload Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/light_gray"
        android:elevation="2dp"
        android:layout_marginBottom="80dp">

        <!-- EditText -->
        <EditText
            android:id="@+id/editTextOpinion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write your opinion..."
            android:textSize="14sp"
            android:maxLines="3"
            android:minHeight="48dp"
            android:background="@drawable/rounded_edittext" />

        <!-- Image Preview (Optional) -->
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:background="@drawable/rounded_edittext" />

        <!-- Action Row (Upload + Send) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/buttonUploadImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_upload"
                android:contentDescription="Upload Image"
                android:padding="8dp"
                 />

            <ImageView
                android:id="@+id/buttonSendOpinion"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_send"
                android:contentDescription="Send Opinion"
                android:padding="8dp"
                android:tint="@color/purple_700"
                tools:ignore="UseAppTint" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
